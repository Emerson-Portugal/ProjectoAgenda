<%- include('partials/head') %>
 <link rel="stylesheet" type="text/css" href="/styleLista.css"> 
<div class="imagenAgendaFondo"></div>

<h5>Contenido de la Tarea</h5>
<div id="contenidoTarea"></div>

<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
<script>
    // Obtener el contenido Markdown del servidor y asignarlo a la variable contenido
    var contenido = `<%= contenido %>`;
    console.log(contenido)
    
    // Convertir el contenido Markdown a HTML utilizando marked.js
    var contenidoHTML = marked.parse(contenido);
    
    // Mostrar el contenido HTML en la vista
    document.getElementById('contenidoTarea').innerHTML = contenidoHTML;
</script>




